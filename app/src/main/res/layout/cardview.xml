<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:padding="0dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        app:cardMaxElevation="6dp"
        app:contentPadding="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/relLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:gravity="left"
                android:layout_marginLeft="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/imageView"/>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_below="@id/name"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="false"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="8dp"
                android:background="@android:color/black"
                app:layout_constraintBottom_toTopOf="@+id/description"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/name"
                app:srcCompat="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/plan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_alignTop="@id/imageView"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:textColor="@android:color/black"
                app:layout_constraintEnd_toStartOf="@+id/release"
                app:layout_constraintHorizontal_bias="0.018"
                app:layout_constraintLeft_toRightOf="@id/imageView"
                app:layout_constraintStart_toEndOf="@id/imageView"
                app:layout_constraintTop_toBottomOf="@+id/name"
                android:textSize="12sp"
                app:layout_constraintTop_toTopOf="@id/imageView" />

            <TextView
                android:id="@+id/release"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_marginEnd="8dp"
                android:layout_toRightOf="@+id/plan"
                android:text="Release"
                android:layout_marginLeft="8dp"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                app:layout_constraintBottom_toBottomOf="@id/plan"
                app:layout_constraintLeft_toRightOf= "@id/plan"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toTopOf="@id/imageView"
                app:layout_constraintTop_toBottomOf="@+id/name"
                 />

            <TextView
                android:id="@+id/duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/plan"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@id/imageView"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:maxLines="1"
                app:layout_constraintBottom_toBottomOf="@+id/type"
                app:layout_constraintBottom_toTopOf="@id/created"
                app:layout_constraintEnd_toStartOf="@+id/type"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toRightOf="@id/imageView"
                app:layout_constraintRight_toLeftOf="@id/type"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintStart_toStartOf="@+id/plan"
                app:layout_constraintTop_toBottomOf="@+id/release"/>

            <TextView
                android:id="@+id/type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/release"
                android:layout_marginStart="8dp"
                android:layout_toRightOf="@id/duration"
                android:text="Type"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:layout_marginTop="0dp"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintLeft_toRightOf="@id/duration"
                app:layout_constraintStart_toEndOf="@id/duration"
                app:layout_constraintTop_toBottomOf="@id/release"
                app:layout_constraintTop_toTopOf="@id/duration" />

            <TextView
                android:id="@+id/created"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/duration"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="8dp"
                android:layout_toRightOf="@id/imageView"
                android:singleLine="false"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.012"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintStart_toStartOf="@+id/duration"
                app:layout_constraintTop_toBottomOf="@+id/type" />

            <TextView
                android:id="@+id/updated"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/created"
                android:layout_marginStart="8dp"
                android:layout_toRightOf="@id/imageView"
                android:singleLine="false"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toBottomOf="@+id/created" />

            <TextView
                android:id="@+id/shortdescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/updated"
                android:layout_marginStart="8dp"
                android:layout_toRightOf="@id/imageView"
                android:maxLines="5"
                android:singleLine="false"
                android:text="The film is built around the intertwining destinies of three characters"
                android:textColor="@android:color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.047"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toBottomOf="@+id/updated" />

            <TextView
                android:id="@+id/description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/shortdescription"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="false"
                android:layout_marginStart="8dp"
                android:paddingTop="5dp"
                android:singleLine="false"
                android:text="The film is built around the intertwining destinies of three main characters during the Second World War. Olga is arrested for hiding Jewish children from the Nazi roundups. Her case is overseen by Jules. He is interested in her and it seems that in exchange for sexual relations he is ready to soften the fate of the prisoner, but this does not happen. A chimeric hope of freedom is replaced by cruel reality â€“ Olga lands in a German concentration camp."
                android:textColor="@android:color/black"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/shortdescription" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>
